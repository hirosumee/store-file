<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            url:"/admin/loadcheckbox",
            type:'post',
            dataType:'json',
            data:{upload:this.checked},
            success:function (result) {
                $('input[name="uploadallow"]').prop('checked',result.result.upload)
                $('input[name="downloadallow"]').prop('checked',result.result.download)
                $('input[name="uploadlimit"]').prop('checked',result.result.uploadlimit)
                $('input[name="downloadlimit"]').prop('checked',result.result.downloadlimit)
                $('#change-uploadlimit').val(result.result.uploadsize)
                $('#change-downloadlimit').val(result.result.downloadsize)
            }
        })
        // Javascript method's body can be found in assets/js/demos.js
        demo.initDashboardPageCharts();
        $('input[name="uploadallow"]').change(function (evt) {

            $.ajax({
                url:"/admin/config/upload",
                type:'post',
                dataType:'json',
                data:{upload:this.checked},
                success:function (result) {

                }
            })
        })
        $('input[name="downloadallow"]').change(function (evt) {

            $.ajax({
                url:"/admin/config/download",
                type:'post',
                dataType:'json',
                data:{upload:this.checked},
                success:function (result) {

                }
            })
        })
        $('input[name="uploadlimit"]').change(function (evt) {

            $.ajax({
                url:"/admin/config/uploadlimit",
                type:'post',
                dataType:'json',
                data:{upload:this.checked},
                success:function (result) {

                }
            })
        })
        $('input[name="downloadlimit"]').change(function (evt) {

            $.ajax({
                url:"/admin/config/downloadlimit",
                type:'post',
                dataType:'json',
                data:{upload:this.checked},
                success:function (result) {

                }
            })
        })
        $('#save-uploadlimit').click(function (evt) {
            $.ajax({
                url:"/admin/config/uploadlimit",
                type:'post',
                dataType:'json',
                data:{size:$('#change-uploadlimit').val()},
                success:function (result) {
                    $('#uploadlimit-modal').modal('hide');
                }
            })
        })
        $('#save-downloadlimit').click(function (evt) {
            $.ajax({
                url:"/admin/config/downloadlimit",
                type:'post',
                dataType:'json',
                data:{size:$('#change-downloadlimit').val()},
                success:function (result) {
                    $('#downloadlimit-modal').modal('hide');
                }
            })
        })
    });
