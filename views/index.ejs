<!doctype html>
<html>
<head>
    <title>Gin-File</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1, shrink-to-fit=no" />
    <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <link href="stylesheets/style.css" rel="stylesheet" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #99ffd6;">
    <a class="navbar-brand" href="#">GinFile</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="/login">Login</a>
            <a class="nav-item nav-link" href="#">Registry</a>
            <a class="nav-item nav-link" href="#">Profile</a>
            <a class="nav-item nav-link disabled invisible" href="#">Logout</a>
        </div>
        <a class="nav-item nav-link name-user " id="username_a">
            <span class="btn btn-outline-primary btn-default btn-file" id="username">
                <%=username%>
            </span>
        </a>
    </div>
</nav>
<div class="container">
    <div class="alert alert-warning role-file" role="alert">
        <%=status%>
    </div>
    <div id="upload-form" class="row">
        <div class="col-md-4"></div>
        <form class="col-md-4" action="upload" method="post" enctype="multipart/form-data">
            <span class="btn btn-outline-primary btn-default btn-file">Tap to choose your file
                <input type="file" name="files">
            </span>
            <button type="submit" class="btn btn-secondary">Upload</button>
            <div class="form-row config">
                <!--<div class="col-md-4"></div>-->
                <div class="form-group col-md-4">
                    <label for="inputPassword2" class="sr-only">Password</label>
                    <input type="password" class="form-control" name="password" id="inputPassword2" placeholder="Password">
                </div>
                <div class="form-group col-md-5">
                    <label for="inputPassword2" class="sr-only">TimesDownload</label>
                    <!--<input type="number" class="form-control" id="inputPassword2" name="downloadLimited" placeholder="TimesDownload" value="100">-->
                    <select class="custom-select mr-sm-2" name="downloadLimited" id="inlineFormCustomSelect">
                        <option selected value="-1">Không giới hạn</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="20">20</option>
                        <option value="25">25</option>
                        <option value="30">30</option>
                        <option value="35">35</option>
                        <option value="40">40</option>
                        <option value="50">50</option>
                        <option value="60">60</option>
                        <option value="70">70</option>
                        <option value="80">80</option>
                        <option value="90">90</option>
                        <option value="100">100</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
    <!-- Content here -->
    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">File Name</th>
            <th scope="col">Uploader</th>
            <th scope="col">Date</th>
            <th scope="col">Size(Kb)</th>
        </tr>
        </thead>
        <tbody>
        <%
            for(i=data.length-1;i>=0;i--)
            {
            %>
                <tr>
                <th scope="row"><%=data.length-i%></th>
                    <td>
                        <a href="file/<%=data[i].name%>"><%=data[i].name%></a>
                    </td>
                    <td><%=data[i].uploader='N/a'%></td>
                    <td><%=((new Date(data[i].client_modified)).toUTCString())%>+0</td>
                    <td><%=Math.round(data[i].size/1024)%></td>
                </tr>
            <%
            }
        %>
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="/javascripts/index.js"></script>
</body>
</html>

